<div class=" p-6 card expense-form">
  <%= form_with(model: transaction, url: transaction.id.present? ? transaction_path : transaction) do |form| %>
  
    <%= render partial: "partials/resource_error_messages", locals: { resource:  transaction } %>
    <!-- Amount -->
    <div class="field mb-4">
      <%= form.label :amount %>
      <%= form.number_field :amount, step: ".01", class: "form-input w-full" %>
    </div>

    <!-- Date -->
    <div class="field mb-4">
      <%= form.label :date %>
      <%= form.date_field :date, class: "form-input w-full" %>
    </div>

    <!-- Description -->
    <div class="field mb-4">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-input w-full" %>
    </div>

     <!-- File Upload -->
     <div class="field mb-4">
      <%= form.label :receipt, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex items-center justify-center w-full">
        <label class="flex flex-col items-center w-full h-32 border-4 border-dashed border-gray-300 hover:border-gray-400 bg-gray-50 rounded-lg cursor-pointer">
          <div class="flex flex-col items-center justify-center pt-5 pb-6">
            <svg aria-hidden="true" class="w-10 h-10 mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16c0 1.104-.896 2-2 2s-2-.896-2-2V6a2 2 0 014 0v10zm0 0v1a2 2 0 004 0v-1M7 16h10m-5 2v1a2 2 0 004 0v-1m4-2v4a2 2 0 01-4 0v-4m0-4V6a2 2 0 014 0v10zM9 10V6a2 2 0 014 0v4m0 4v4a2 2 0 01-4 0v-4m0-4V6a2 2 0 014 0v4m0 4v4a2 2 0 01-4 0v-4m0-4V6a2 2 0 014 0v4m0 4v4a2 2 0 01-4 0v-4z"></path></svg>
            <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
            <p class="text-xs text-gray-500">SVG, PNG, JPG or GIF (max. 800x400px)</p>
          </div>
          <%= form.file_field :receipt, class: "hidden" %>
        </label>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="flex items-center mt-4 md:mt-6 flex-start gap-2">
      <%= form.submit t('forms.buttons.save'), class: "btn btn-md btn-primary" %>
      <button data-action="turbo-modal#hideModal" class="btn btn-md btn-secondary" ><%= t("forms.buttons.cancel") %></button>
    </div>
  <% end %>
</div>
