
<div class="w-full">
  <h2 class="font-medium text-xl mb-4 text-center text-primary-900"><%= t('devise.sessions.new.title') %></h2>
  <%= render 'devise/shared/flash_messages' %>
  <div class="overflow-hidden">
    <div class="p-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
        <div class="field mb-6">
            <%= f.label :email, class: 'mb-2' %>
            <%= f.email_field :email, autofocus: true, class: 'form-input form-input--auth',  placeholder: t('forms.placeholders.user.email') %>
        </div>

        <div class="field mb-6">
          <%= f.label :password, class: 'mb-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-input form-input--auth', placeholder: t('forms.placeholders.user.password') %>
        </div>

        <section class="flex justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="field mb-8 flex align-baseline">
              <%= f.check_box :remember_me, class: 'mr-2' %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name), class: "text-sm leading-5 font-semibold text-grey-600" %>
        </section>

        <div class="flex justify-center mb-3 actions">
          <%= f.submit t('forms.buttons.login'), class: "btn w-full text-white btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
   <div class="text-center">
      <span><%= t('devise.shared.links.dont_have_an_account') %></span>
      <%= link_to t('forms.buttons.sign_up'), new_registration_path(resource_name), class: "font-medium ms-1" %>
  </div>
</div>

