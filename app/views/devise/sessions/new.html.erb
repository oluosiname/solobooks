<div class="bg-primary w-full h-screen flex items-center justify-center">
  <div class="2xl:w-1/4 lg:w-1/3 md:w-1/2 w-full">
    <%= render 'devise/shared/flash_messages' %>
    <div class="card overflow-hidden sm:rounded-md rounded-none">
      <div class="px-6 py-8">
        <a href="index.html" class="flex justify-center mb-8">
          <img class="h-6" src="" alt="">
        </a>
        <h2 class="text-base text-center text-danger-800 mb-2"><%= flash[:alert] %></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
          <div class="field mb-6">
              <%= f.label :email, class: 'mb-2' %>
              <%= f.email_field :email, autofocus: true, class: 'form-input',  placeholder: t('forms.placeholders.user.email') %>
          </div>

          <div class="field mb-6">
            <%= f.label :password, class: 'mb-2' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-input', placeholder: t('forms.placeholders.user.password') %>
          </div>

          <%# <% if devise_mapping.rememberable? %>
            <%# <div class="field mb-8">
              <%= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
            <%# </div> %>
          <%# end %>

          <div class="flex justify-center mb-3 actions">
            <%= f.submit t('forms.buttons.login'), class: "btn w-full text-white btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

