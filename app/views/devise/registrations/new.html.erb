
<div class="w-full">
  <h2 class="font-medium text-xl mb-4 text-center text-primary-900"><%= t('devise.registrations.new.title') %></h2>
  <div class="overflow-hidden">
    <div class="p-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div class="field mb-6">
          <%= f.label :email, class: 'mb-2 block font-medium text-gray-700' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input form-input--auth block w-full border border-gray-300 rounded-md py-2 px-3 shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500', placeholder: t('forms.placeholders.user.email') %>
          <ul class="text-danger-700 text-sm">
            <%= render partial: "devise/shared/field_error_messages", locals: {field: :email, messages: resource.errors.messages[:email] } %>
          </ul>
        </div>

        <!-- Password Field -->
        <div class="field mb-6">
          <%= f.label :password, class: 'mb-2 block font-medium text-gray-700' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-input form-input--auth block w-full border border-gray-300 rounded-md py-2 px-3 shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500', placeholder: t('forms.placeholders.user.password') %>
          <ul class="text-danger-700 text-sm">
            <%= render partial: "devise/shared/field_error_messages", locals: {field: :password, messages: resource.errors.messages[:password] } %>
          </ul>
        </div>

        <!-- Password Confirmation Field -->
        <div class="field mb-6">
          <%= f.label :password_confirmation, class: 'mb-2 block font-medium text-gray-700' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input form-input--auth block w-full border border-gray-300 rounded-md py-2 px-3 shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500', placeholder: t('forms.placeholders.user.password_confirmation') %>
          <ul class="text-danger-700 text-sm">
            <%= render partial: "devise/shared/field_error_messages", locals: {field: :password_confirmation, messages: resource.errors.messages[:password_confirmation] } %>
          </ul>
        </div>

        <!-- Terms and Conditions -->
        <div class="flex items-center mb-8">
          <input type="checkbox" class="form-checkbox rounded text-primary focus:ring-primary-500" id="checkbox-signin">
          <label class="ms-2 text-sm text-gray-700" for="checkbox-signin">
            I accept <a href="#" class="text-primary hover:underline">Terms and Conditions</a>
          </label>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center mb-3 actions">
          <%= f.submit t('forms.buttons.sign_up'), class: "btn btn-lg w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-500" %>
        </div>

      <% end %>
    </div>
    <div class="text-center">
      <span><%= t('devise.shared.links.already_have_an_account') %></span>
      <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name), class: "font-medium ms-1" %>
    </div>
  </div>
</div>
