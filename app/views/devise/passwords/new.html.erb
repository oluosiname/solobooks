
<div class="w-full">
  <div class="overflow-hidden">
    <div class="p-1">
      <h2 class="font-medium text-xl mb-4 text-center text-primary-900"><%= t('devise.passwords.new.title') %></h2>
      <p class="text-center text-sm lg:w-3/4 mx-auto mb-6 text-grey-500"><%= t("devise.passwords.heading") %></p>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mb-6">
            <%= f.label :email,  class: 'mb-2' %>
            <%= f.email_field :email, autofocus: true, class: 'form-input form-input--auth', autocomplete: "email", placeholder: t('forms.placeholders.user.email') %>
        </div>

        <div class="flex justify-center mb-3 actions">
          <%= f.submit t('forms.buttons.reset_password'), class: "btn btn-lg w-full text-white btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center">
    <span><%= t('devise.shared.links.already_have_an_account') %></span>
    <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name), class: "font-medium ms-1" %>
  </div>
</div>


