<div class="bg-primary w-full h-screen flex items-center justify-center">
  <div class="2xl:w-1/4 lg:w-1/3 md:w-1/2 w-full">
    <div class="card overflow-hidden sm:rounded-md rounded-none">
      <div class="px-6 py-8">
        <a href="index.html" class="flex justify-center mb-8">
          <img class="h-6" src="" alt="">
        </a>
        <p class="text-center text-sm lg:w-3/4 mx-auto mb-6 text-grey-500"><%= t("devise.passwords.heading") %></p>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mb-6">
              <%= f.label :email,  class: 'mb-2' %>
              <%= f.email_field :email, autofocus: true, class: 'form-input', autocomplete: "email", placeholder: t('forms.placeholders.user.email') %>
          </div>

          <div class="flex justify-center mb-3 actions">
            <%= f.submit t('forms.buttons.reset_password'), class: "btn w-full text-white btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


