<div class="w-full">
  <%= render 'devise/shared/flash_messages' %>
  <div class="overflow-hidden">
    <div class="p-1">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
        <div class="field mb-6">
          <%= f.label :password,  class: 'mb-2' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-input form-input--auth', placeholder: t('forms.placeholders.user.password') %>
          <ul class="text-danger-700">
            <%= render partial: "devise/shared/field_error_messages", locals: {field: :password, messages: resource.errors.messages[:password] } %>
          </ul>
        </div>

        <div class="field mb-6">
          <%= f.label :password_confirmation, class: 'mb-2' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input form-input--auth', placeholder: t('forms.placeholders.user.password_confirmation') %>
          <ul class="text-danger-700">
              <%= render partial: "devise/shared/field_error_messages", locals: {field: :password_confirmation, messages: resource.errors.messages[:password_confirmation] } %>
            </ul>
        </div>

        <div class="flex justify-center mb-3 actions">
          <%= f.submit t("forms.buttons.change_password"), class: "btn btn-lg w-full text-white btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
