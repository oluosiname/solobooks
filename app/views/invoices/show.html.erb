<div class="card p-6">
  <!-- Grid -->
  <% if @invoice.pdf.attached? %>
    <%= link_to 'download', rails_blob_path(@invoice.pdf, disposition: "inline") %>
  <% end %>
  <div class="flex justify-between">
    <div>
      <img class="h-6" src="assets/images/logo-dark.png" alt="">
      <h1 class="mt-2 text-lg md:text-xl font-semibold text-primary">MyraStudio Inc.</h1>
    </div>
    <!-- Col -->
    <div class="text-end">
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-800">Invoice #</h2>
      <span class="mt-1 block text-gray-500">654546</span>
      <address class="mt-4 not-italic text-gray-800">
        1093 Coleman Avenue<br>
        Escondido<br>
        CA 92025<br>
        United States<br>
      </address>
    </div>
    <!-- Col -->
  </div>
  <!-- End Grid -->
  <!-- Grid -->
  <div class="mt-8 grid grid-cols-2 gap-3">
    <div>
      <h3 class="text-lg font-semibold text-gray-800">Bill to:</h3>
      <h3 class="text-lg font-semibold text-gray-800">Sara Williams</h3>
      <address class="mt-2 not-italic text-gray-500">
        1274 Stark Hollow Road,<br>
        Denver, CO 80202,<br>
        United States<br>
      </address>
    </div>
    <!-- Col -->
    <div class="sm:text-end space-y-2">
      <!-- Grid -->
      <div class="grid grid-cols-2 sm:grid-cols-1 gap-3 sm:gap-2">
        <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Invoice date:</dt>
          <dd class="col-span-2 text-gray-500">07/08/2023</dd>
        </dl>
        <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Due date:</dt>
          <dd class="col-span-2 text-gray-500">05/12/2023</dd>
        </dl>
      </div>
      <!-- End Grid -->
    </div>
    <!-- Col -->
  </div>
  <!-- End Grid -->
  <!-- Table -->
  <div class="mt-6">
    <div class="border border-gray-200 p-4 rounded-lg space-y-4">
      <div class="grid grid-cols-5">
        <div class="sm:col-span-2 text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.item") %></div>
        <div class="text-left text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.qty") %></div>
        <div class="text-left text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.rate") %></div>
        <div class="text-end text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.amount") %></div>
      </div>
      <div class="hidden sm:block border-b border-gray-200"></div>
      <% @invoice.line_items.each do |line_item| %>
      <div class="grid grid-cols-3 sm:grid-cols-5 pdf-item-row">
        <div class="col-span-full sm:col-span-2">
          <h5 class="sm:hidden text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.item") %></h5>
          <p class="font-medium text-gray-800"><%= line_item.description %></p>
        </div>
        <div>
          <h5 class="sm:hidden text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.qty") %></h5>
          <p class="text-gray-800"><%= line_item.quantity %></p>
        </div>
        <div>
          <h5 class="sm:hidden text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.rate") %></h5>
          <p class="text-gray-800"><%= number_to_currency(line_item.unit_price, unit: @invoice.currency_symbol) %></p></p>
        </div>
        <div>
          <h5 class="sm:hidden text-xs font-medium text-gray-500 uppercase"><%= t("invoices.show.line_items_table.heading.amount") %></h5>
          <p class="sm:text-end text-end text-gray-800"><%= number_to_currency(line_item.total_price, unit: @invoice.currency_symbol) %></p></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <!-- End Table -->
  <!-- Flex -->
  <div class="mt-8 flex justify-between">
    <div>
      <h4 class="text-lg font-semibold text-gray-800 mb-3">Payment Info</h4>
      <div class="grid grid-cols-2 sm:grid-cols-1 gap-1 sm:gap-2">
        <dl class="grid sm:grid-cols-4 gap-x-1">
          <dt class="col-span-2 font-semibold text-gray-800">Account No:</dt>
          <dd class="col-span-1 text-gray-500">1980293849</dd>
        </dl>
        <dl class="grid sm:grid-cols-4 gap-x-1">
          <dt class="col-span-2 font-semibold text-gray-800">Bank Name: </dt>
          <dd class="col-span-2 text-gray-500">First National Bank</dd>
        </dl>
        <dl class="grid sm:grid-cols-4 gap-x-1">
          <dt class="col-span-2 font-semibold text-gray-800">Tax ID</dt>
          <dd class="col-span-2 text-gray-500">234/1/63/111</dd>
        </dl>
        <dl class="grid sm:grid-cols-4 gap-x-1">
          <dt class="col-span-2 font-semibold text-gray-800">Vat ID</dt>
          <dd class="col-span-2 text-gray-500">767587231</dd>
        </dl>
      </div>
    </div>
    <div class="w-full max-w-2xl sm:text-end space-y-2">
      <!-- Grid -->
      <div class="grid grid-cols-2 sm:grid-cols-1 gap-3 sm:gap-2">
        <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Subtotal:</dt>
          <dd class="col-span-2 text-gray-500">$3000.00</dd>
        </dl>
        <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Vat (9%): </dt>
          <dd class="col-span-2 text-gray-500">$300.00</dd>
        </dl>
        <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Total:</dt>
          <dd class="col-span-2 text-gray-500">$3300.00</dd>
        </dl>
        <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Amount Due:</dt>
          <dd class="col-span-2 text-gray-500">$3300.00</dd>
        </dl>
        <%# <dl class="grid sm:grid-cols-5 gap-x-3">
          <dt class="col-span-3 font-semibold text-gray-800">Due balance:</dt>
          <dd class="col-span-2 text-gray-500">$0.00</dd>
        </dl> %>
      </div>
      <!-- End Grid -->
    </div>
  </div>
  <!-- End Flex -->
  <div class="mt-8 sm:mt-12">
    <h4 class="text-lg font-semibold text-gray-800">Thank you!</h4>
    <p class="text-gray-500">If you have any questions concerning this invoice, use the following contact information:</p>
    <div class="mt-2">
      <p class="block text-sm font-medium text-gray-800">example@site.com</p>
      <p class="block text-sm font-medium text-gray-800">+1 (062) 109-9222</p>
    </div>
  </div>
  <div class="flex items-center justify-between">
    <p class="mt-5 text-sm text-gray-500">Â© 2023 MyraStudio.</p>

  </div>
</div>