<div class="flex invoice-line-item-fields-wrapper nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div><%= f.text_field :description, class: 'form-input' %></div>
  <div><%= f.number_field :unit_price, class: 'form-input unit_price', lang: I18n.locale %></div>
  <div>
    <%# <label class="select" for="slct"> %>
      <%= f.label :unit, class:"select" do %>
        <%= f.select :unit, options_for_select(LineItem::UNITS, 'pc') %>
        <svg style="top: calc(50% - 3px)">
          <use xlink:href="#select-arrow-down"></use>
        </svg>
      <% end %>
    <%# </label> %>
    <!-- SVG Sprites-->
    <svg class="sprites">
      <symbol id="select-arrow-down" viewbox="0 0 10 6">
        <polyline points="1 1 5 5 9 1"></polyline>
      </symbol>
    </svg>
  </div>
  <div><%= f.number_field :quantity, class: 'form-input quantity' %></div>

  <div><%= f.number_field :total_price , class: 'form-input', readonly: true %></div>

  <!-- Add fields for other line item attributes -->

  <div><button type="button" class="btn btn-sm btn-dark" data-action="nested-form#remove">Remove</button></div>

  <%= f.hidden_field :_destroy %>
</div>